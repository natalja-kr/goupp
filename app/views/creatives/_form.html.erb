<%= form_for([@campaign,@creative]) do |f| %>
  <% if @creative.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@creative.errors.count, "error") %> prohibited this creative from being saved:</h2>

      <ul>
      <% @creative.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.label 'Тип' %><br/>
    <%= f.select_tag 'creative[type]', options_for_select(Creative.types) %><br>
    <%= f.label 'Описание или картинка' %><br/>
    <%= f.text_area :description, class: 'form-control' %><br>
    <% if @creative.image.url != "/images/original/missing.png" %>
        <%= image_tag @creative.image.url(:thumb) %>
    <% end %>
    <%= f.file_field :image %><br>
    <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
  </div>
<% end %>
