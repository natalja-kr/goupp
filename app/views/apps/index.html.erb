<p id="notice"><%= notice %></p>

<h1>Мои приложения</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= app.name %></td>
        <td><%= app.description %></td>
        <td>
          <%= link_to 'Просмотр', app %>
          <%= link_to 'Редактировать', edit_app_path(app) %>
          <%= link_to 'Удалить', app, method: :delete, data: { confirm: 'Вы уверены?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить', new_app_path %>
