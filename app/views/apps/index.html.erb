<h1>Мои приложения</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <% icon_platform = app.platform.name == 'ios' ? 'apple' : app.platform.name %>
        <td style="width: 20px"><%= fa_icon("#{icon_platform} 2x") %></td>
        <td><%= app.name %></td>
        <td><%= app.description %></td>
        <td>
          <%= link_to (fa_icon "eye"), app %>&nbsp;
          <%= link_to (fa_icon "edit"), edit_app_path(app) %>&nbsp;
          <%= link_to (fa_icon "remove"), app, method: :delete, data: { confirm: 'Вы уверены?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить', new_app_path %>

