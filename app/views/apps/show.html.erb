<h1><%= @app.name %></h1>
<p><b>Описание:</b> <%= @app.description %></p>
<p><b>Платформа:</b> <%= @app.platform.name %></p>
<p><b>Привязано к категориям:</b> </p>
<% @app.categories.each do |c| %>
    <p><%= c.name %></p>
<% end %>
<%= link_to 'Редактировать', edit_app_path(@app) %>
<h2>Рекламные кампании для <%= @app.name %></h2>

<table class="table table-condensed">
  <thead>
  <tr>
    <th>Приложение</th>
    <th>Осталось показов</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.app.name %></td>
        <td><%= campaign.count_demonstration %></td>
        <td>
          <%= link_to (fa_icon "eye"), campaign_creatives_path(campaign) %>&nbsp;
          <%= link_to (fa_icon "edit"), edit_campaign_path(campaign) %>&nbsp;
          <%= link_to (fa_icon "remove"), campaign, method: :delete, data: { confirm: 'Вы уверены?' } %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая кампания', new_campaign_path %> |
<%= link_to 'Назад', apps_path %>
