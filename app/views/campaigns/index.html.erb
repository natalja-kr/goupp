<p id="notice"><%= notice %></p>

<h1>Мои рекламные кампании</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Приложение</th>
      <th>Осталось показов</th>
      <th>Количество видов рекламы</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.name %></td>
        <td><%= campaign.count_demonstration %></td>
        <td><%= campaign.creatives.count %></td>
        <td>
          <%= link_to (fa_icon "eye"), campaign_creatives_path(campaign) %>&nbsp;
          <%= link_to (fa_icon "edit"), edit_campaign_path(campaign) %>&nbsp;
          <%= link_to (fa_icon "remove"), campaign, method: :delete, data: { confirm: 'Вы уверены?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая кампания', new_campaign_path %>
